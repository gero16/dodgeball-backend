# Configuración para Railway
NODE_ENV=production
PORT=3000

# MongoDB (Railway)
# Usa las variables que Railway proporciona automáticamente
# MONGOHOST=containers-us-west-xxx.railway.app
# MONGOPORT=27017
# MONGOUSER=root
# MONGOPASSWORD=tu_password_generado
# MONGODATABASE=dodgeball-club

# O usa MONGO_URL directamente
# MONGO_URL=mongodb://root:password@containers-us-west-xxx.railway.app:27017/dodgeball-club

# JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_para_produccion_cambiar_esto
JWT_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=https://tu-frontend.com

# Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_de_aplicacion

# PayPal (para donaciones)
PAYPAL_CLIENT_ID=tu_paypal_client_id
PAYPAL_CLIENT_SECRET=tu_paypal_client_secret
PAYPAL_MODE=live

# Uploads
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# Socket.io
SOCKET_CORS_ORIGIN=https://tu-frontend.com
