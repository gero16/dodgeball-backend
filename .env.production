# Configuración de producción
NODE_ENV=production
PORT=3000

# Base de datos (configurar con tu MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dodgeball-club

# JWT (cambiar por un secret seguro)
JWT_SECRET=tu_jwt_secret_muy_seguro_para_produccion_cambiar_esto
JWT_EXPIRES_IN=7d

# Frontend URL (configurar con tu dominio)
FRONTEND_URL=https://tu-frontend.com

# Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_de_aplicacion

# PayPal (para donaciones)
PAYPAL_CLIENT_ID=tu_paypal_client_id
PAYPAL_CLIENT_SECRET=tu_paypal_client_secret
PAYPAL_MODE=live

# Uploads
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# Socket.io
SOCKET_CORS_ORIGIN=https://tu-frontend.com
